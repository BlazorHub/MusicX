@page "/songslistredirect/"
@page "/songslistredirect/{PageNumber:int}"
@page "/songslistredirect/{SearchTerms}/{PageNumber:int}"
@inject IUriHelper UriHelper

@code {

    [Parameter]
    public int PageNumber { get; set; } = 1;

    [Parameter]
    public string SearchTerms { get; set; } = null;

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(this.SearchTerms))
        {
            this.UriHelper.NavigateTo($"/songslist/{this.PageNumber}");
        }
        else
        {
            this.UriHelper.NavigateTo($"/songslist/{this.SearchTerms}/{this.PageNumber}");
        }
    }
}
